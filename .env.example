# Monarchs Chat System - Environment Variables
# Copy this file to .env and fill in your values

# ===================================================================
# Application Settings
# ===================================================================

# Environment: development, staging, production
NODE_ENV=production

# ===================================================================
# Security Settings
# ===================================================================

# IMPORTANT: Generate a secure random secret for production
# Run: openssl rand -hex 64
MONARCHS_TOKEN_SECRET=your-secure-random-token-secret-here

# ===================================================================
# Erlang Backend Settings
# ===================================================================

# Backend host (for relay server to connect to)
ERLANG_HOST=localhost

# Backend port
ERLANG_PORT=5678

# ===================================================================
# WebSocket Relay Settings
# ===================================================================

# WebSocket server port
WS_PORT=8080

# ===================================================================
# Logging
# ===================================================================

# Log level: debug, info, warn, error
MONARCHS_LOG_LEVEL=info

# ===================================================================
# Database (Future Enhancement)
# ===================================================================

# PostgreSQL connection string
# MONARCHS_DB_URL=postgresql://user:password@localhost:5432/monarchs

# Redis connection string
# MONARCHS_REDIS_URL=redis://localhost:6379

# ===================================================================
# Docker Deployment
# ===================================================================

# Docker Hub username for publishing images
DOCKER_HUB_USERNAME=your-dockerhub-username

# Docker Hub password or access token
DOCKER_HUB_TOKEN=your-dockerhub-token

# ===================================================================
# Cloud Deployment (Optional)
# ===================================================================

# AWS Region
# AWS_REGION=us-east-1

# Kubernetes namespace
# K8S_NAMESPACE=monarchs

# ===================================================================
# Monitoring (Optional)
# ===================================================================

# Grafana admin password
GRAFANA_PASSWORD=your-secure-grafana-password

# ===================================================================
# Third-party Integrations (Optional)
# ===================================================================

# Snyk token for security scanning
# SNYK_TOKEN=your-snyk-token

# Slack webhook for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

